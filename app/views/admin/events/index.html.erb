<div class="card">
  <h2>Events</h2>
  <%= link_to "New Event", new_admin_event_path, class: "button-link" %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Location</th>
        <th>Status</th>
        <th>Assigned</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.event_date %></td>
          <td><%= event.location %></td>
          <td><%= event.status %></td>
          <td><%= event.assigned_count %> / <%= event.required_volunteers %></td>
          <td>
            <%= link_to "View", admin_event_path(event) %>
            <%= link_to "Edit", edit_admin_event_path(event) %>
            <%= button_to "Delete", admin_event_path(event), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "link-button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
