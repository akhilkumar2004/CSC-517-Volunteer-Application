<%= form_with model: [:admin, @volunteer], local: true do |form| %>

  <% if @volunteer.errors.any? %>
    <div class="flash-alert">
      <ul>
        <% @volunteer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <label>Username <span class="required">*</span></label>
  <%= form.text_field :username, required: true %>

  <label>Password <span class="required">*</span></label>
  <%= form.password_field :password, required: true %>

  <label>Confirm Password <span class="required">*</span></label>
  <%= form.password_field :password_confirmation, required: true %>

  <label>Full Name <span class="required">*</span></label>
  <%= form.text_field :full_name, required: true %>

  <label>Email <span class="required">*</span></label>
  <%= form.email_field :email, required: true %>

  <label>Phone Number</label>
  <%= form.text_field :phone_number %>

  <label>Address</label>
  <%= form.text_field :address %>

  <label>Skills / Interests</label>
  <%= form.text_area :skills, rows: 3 %>

  <%= form.submit %>

<% end %>