<div class="card">
  <h2>Volunteers</h2>
  <%= link_to "New Volunteer", new_admin_volunteer_path, class: "button-link" %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Username</th>
        <th>Total Hours</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @volunteers.each do |volunteer| %>
        <tr>
          <td><%= volunteer.full_name %></td>
          <td><%= volunteer.email %></td>
          <td><%= volunteer.username %></td>
          <td><%= volunteer.total_hours %></td>
          <td>
            <%= link_to "View", admin_volunteer_path(volunteer) %>
            <%= link_to "Edit", edit_admin_volunteer_path(volunteer) %>
            <%= button_to "Delete", admin_volunteer_path(volunteer), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "link-button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
