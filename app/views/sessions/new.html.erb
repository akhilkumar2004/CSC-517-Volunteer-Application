<h2>Login</h2>

<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :username %><br>
    <%= text_field_tag :username, params[:username] %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Log In" %>
  </div>
<% end %>