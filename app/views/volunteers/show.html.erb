<div class="card">
  <h2>Volunteer Dashboard</h2>
  <p><strong>ID:</strong> <%= @volunteer.id %></p>
  <p><strong>Name:</strong> <%= @volunteer.full_name %></p>
  <p><strong>Email:</strong> <%= @volunteer.email %></p>
  <p><strong>Phone:</strong> <%= @volunteer.phone_number.presence || "-" %></p>
  <p><strong>Address:</strong> <%= @volunteer.address.presence || "-" %></p>
  <p><strong>Skills:</strong> <%= @volunteer.skills.presence || "-" %></p>
  <p><strong>Total Hours:</strong> <%= @volunteer.total_hours %></p>


  <%= link_to "Edit Profile", volunteer_profile_edit_path, class: "button-link" %>
  <%= button_to "Delete Account", volunteer_account_path, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button-link button-secondary" %>
</div>

<div class="card">
  <h3>Quick Links</h3>
  <ul>
    <li><%= link_to "View Available Events", events_path %></li>
    <li><%= link_to "View Assignments", volunteer_assignments_path %></li>
    <li><%= link_to "View History and Total Hours", volunteer_history_path %></li>
  </ul>
</div>

<div class="card">
  <h3>Recent Assignments</h3>
  <table>
    <thead>
      <tr>
        <th>Event</th>
        <th>Status</th>
        <th>Hours</th>
        <th>Date Logged</th>
      </tr>
    </thead>
    <tbody>
      <% @assignments.limit(5).each do |assignment| %>
        <tr>
          <td><%= assignment.event.title %></td>
          <td><%= assignment.status %></td>
          <td><%= assignment.hours_worked || "-" %></td>
          <td><%= assignment.date_logged || "-" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
